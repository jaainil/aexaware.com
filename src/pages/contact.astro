---
import SiteLayout from "@/layouts/SiteLayout.astro";
import { ContactForm } from "@/components/ContactForm";
import {
  Mail,
  MapPin,
  Phone,
  Clock,
  Linkedin,
  Instagram,
  Twitter,
  Facebook,
} from "lucide-react";

const socialLinks = [
  { icon: Linkedin, href: "#" },
  { icon: Instagram, href: "#" },
  { icon: Twitter, href: "#" },
  { icon: Facebook, href: "#" },
];
---

<SiteLayout
  title="Contact Aexaware Infotech – Let’s Build Together"
  description="Get in touch with Aexaware Infotech for custom web, mobile & AI solutions."
>
  <div class="min-h-screen bg-background font-sans">
    {/* Hero Section */}
    <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-primary/5 to-transparent -z-10" />
      <div class="container mx-auto px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <span class="inline-block px-4 py-1.5 rounded-full bg-primary/10 text-primary text-sm font-medium">
            Contact Us
          </span>
          <h1 class="mt-8 font-serif text-5xl font-medium leading-tight text-foreground sm:text-6xl lg:text-7xl">
            Get in touch <br class="hidden md:block" />
            <span class="italic text-muted-foreground">
              with us.
            </span>
          </h1>
          <p class="mx-auto mt-8 max-w-2xl text-lg text-muted-foreground leading-relaxed">
            We Should Talk. Whether you have a concrete project in mind or
            just a vague idea, we're here to listen.
          </p>
        </div>
      </div>
    </section>

    {/* Contact Info & Form Section */}
    <section class="py-24 bg-background">
      <div class="container mx-auto px-6 lg:px-8">
        <div class="grid gap-16 lg:grid-cols-2 lg:gap-24">
          {/* Left Column: Info */}
          <div class="space-y-12">
            <div class="space-y-8">
              <div class="flex items-start gap-4">
                <div class="flex size-10 shrink-0 items-center justify-center rounded-full bg-secondary text-primary">
                  <Mail className="size-5" />
                </div>
                <div>
                  <h3 class="font-medium text-foreground">Email</h3>
                  <a
                    href="mailto:info@aexaware.com"
                    class="text-muted-foreground hover:text-primary transition-colors"
                  >
                    info@aexaware.com
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="flex size-10 shrink-0 items-center justify-center rounded-full bg-secondary text-primary">
                  <Phone className="size-5" />
                </div>
                <div>
                  <h3 class="font-medium text-foreground">Phone</h3>
                  <a
                    href="tel:+919825438119"
                    class="text-muted-foreground hover:text-primary transition-colors"
                  >
                    +91 98254 38119
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="flex size-10 shrink-0 items-center justify-center rounded-full bg-secondary text-primary">
                  <MapPin className="size-5" />
                </div>
                <div>
                  <h3 class="font-medium text-foreground">Address</h3>
                  <p class="text-muted-foreground max-w-xs">
                    C/O Monali Patel, Sahyog Society, Vasad, Anand, Gujarat
                    388306
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="flex size-10 shrink-0 items-center justify-center rounded-full bg-secondary text-primary">
                  <Clock className="size-5" />
                </div>
                <div>
                  <h3 class="font-medium text-foreground">
                    Working Hours
                  </h3>
                  <p class="text-muted-foreground">
                    Mon – Fri : 9AM – 6PM
                  </p>
                  <p class="text-muted-foreground">Sat : 10AM - 12AM</p>
                  <p class="text-muted-foreground">Sun : Closed</p>
                </div>
              </div>

              <div class="pt-4">
                <h3 class="font-medium text-foreground mb-4">
                  Follow us
                </h3>
                <div class="flex gap-4">
                  {socialLinks.map((social) => (
                    <a
                      href={social.href}
                      class="flex size-10 items-center justify-center rounded-full border border-border bg-background text-muted-foreground transition-colors hover:bg-primary hover:text-primary-foreground hover:border-primary"
                    >
                      <social.icon className="size-5" />
                    </a>
                  ))}
                </div>
              </div>
            </div>
          </div>

          {/* Right Column: Form */}
          <div class="rounded-[2.5rem] bg-secondary/30 p-8 md:p-12 border border-border/50">
            <h2 class="text-2xl font-medium mb-6">Send us a message</h2>
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </section>
  </div>
</SiteLayout>
