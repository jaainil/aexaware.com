---
import { Image } from 'astro:assets';
import partner1 from '@/assets/1.png';
import partner2 from '@/assets/2.png';
import partner3 from '@/assets/3.png';
import partner4 from '@/assets/4.png';
import partner5 from '@/assets/5.png';

const companies = [
  { name: "Partner 1", logo: partner1 },
  { name: "Partner 2", logo: partner2 },
  { name: "Partner 3", logo: partner3 },
  { name: "Partner 4", logo: partner4 },
  { name: "Partner 5", logo: partner5 },
];
---

<section class="py-12 border-b border-border/40 bg-background">
  <div class="container mx-auto px-6 lg:px-8 text-center">
    <p class="text-sm font-medium text-muted-foreground uppercase tracking-widest mb-8">Trusted by innovative companies</p>
    
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
      {companies.map((company) => (
        <Image 
          src={company.logo} 
          alt={`${company.name} logo`} 
          width={200}
          class="h-20 w-auto object-contain"
          loading="lazy"
        />
      ))}
    </div>
  </div>
</section>
