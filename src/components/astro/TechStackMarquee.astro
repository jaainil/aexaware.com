---


const technologies = [
  { name: "React", icon: "https://cdn.simpleicons.org/react/61DAFB" },
  { name: "Astro", icon: "https://cdn.simpleicons.org/astro/BC52EE" }, // Using a visible color for dark/light mode compatibility or handle via CSS filter
  { name: "Node.js", icon: "https://cdn.simpleicons.org/nodedotjs/339933" },
  { name: "AWS", icon: "https://cdn.simpleicons.org/amazonwebservices/232F3E" },
  { name: "Python", icon: "https://cdn.simpleicons.org/python/3776AB" },
  { name: "TypeScript", icon: "https://cdn.simpleicons.org/typescript/3178C6" },
  { name: "Tailwind CSS", icon: "https://cdn.simpleicons.org/tailwindcss/06B6D4" },
  { name: "Next.js", icon: "https://cdn.simpleicons.org/nextdotjs/000000" },
  { name: "Docker", icon: "https://cdn.simpleicons.org/docker/2496ED" },
  { name: "PostgreSQL", icon: "https://cdn.simpleicons.org/postgresql/4169E1" },
  { name: "MongoDB", icon: "https://cdn.simpleicons.org/mongodb/47A248" },
  { name: "Redis", icon: "https://cdn.simpleicons.org/redis/FF4438" },
  { name: "GraphQL", icon: "https://cdn.simpleicons.org/graphql/E10098" },
  { name: "Figma", icon: "https://cdn.simpleicons.org/figma/F24E1E" },
];
---

<section class="py-10 border-y border-border/40 bg-background/50 backdrop-blur-sm overflow-hidden">
  <div class="container mx-auto px-4 mb-6 text-center">
    <p class="text-sm font-medium text-muted-foreground uppercase tracking-widest">Powered by Modern Tech Stack</p>
  </div>
  
  <div class="relative flex overflow-x-hidden group">
    <div class="animate-marquee whitespace-nowrap flex items-center gap-16 px-8">
      {technologies.map((tech) => (
        <div class="flex items-center justify-center gap-2 group/icon transition-all duration-300 hover:scale-110 grayscale hover:grayscale-0 opacity-70 hover:opacity-100">
          <img 
            src={tech.icon} 
            alt={tech.name} 
            class="h-8 w-auto max-w-[none] dark:invert dark:brightness-0 dark:group-hover/icon:invert-0 dark:group-hover/icon:brightness-100 transition-all duration-300"
            loading="eager"
          />
          <span class="text-sm font-semibold hidden lg:block opacity-0 group-hover/icon:opacity-100 transition-all duration-300 -translate-x-2 group-hover/icon:translate-x-0">{tech.name}</span>
        </div>
      ))}
      {/* Duplicate for seamless loop */}
      {technologies.map((tech) => (
        <div class="flex items-center justify-center gap-2 group/icon transition-all duration-300 hover:scale-110 grayscale hover:grayscale-0 opacity-70 hover:opacity-100">
          <img 
            src={tech.icon} 
            alt={tech.name} 
            class="h-8 w-auto max-w-[none] dark:invert dark:brightness-0 dark:group-hover/icon:invert-0 dark:group-hover/icon:brightness-100 transition-all duration-300"
            loading="eager"
          />
          <span class="text-sm font-semibold hidden lg:block opacity-0 group-hover/icon:opacity-100 transition-all duration-300 -translate-x-2 group-hover/icon:translate-x-0">{tech.name}</span>
        </div>
      ))}
    </div>

    <div class="absolute top-0 animate-marquee2 whitespace-nowrap flex items-center gap-16 px-8">
      {technologies.map((tech) => (
        <div class="flex items-center justify-center gap-2 group/icon transition-all duration-300 hover:scale-110 grayscale hover:grayscale-0 opacity-70 hover:opacity-100">
          <img 
            src={tech.icon} 
            alt={tech.name} 
            class="h-8 w-auto max-w-[none] dark:invert dark:brightness-0 dark:group-hover/icon:invert-0 dark:group-hover/icon:brightness-100 transition-all duration-300"
            loading="eager"
          />
          <span class="text-sm font-semibold hidden lg:block opacity-0 group-hover/icon:opacity-100 transition-all duration-300 -translate-x-2 group-hover/icon:translate-x-0">{tech.name}</span>
        </div>
      ))}
      {/* Duplicate for seamless loop */}
      {technologies.map((tech) => (
        <div class="flex items-center justify-center gap-2 group/icon transition-all duration-300 hover:scale-110 grayscale hover:grayscale-0 opacity-70 hover:opacity-100">
          <img 
            src={tech.icon} 
            alt={tech.name} 
            class="h-8 w-auto max-w-[none] dark:invert dark:brightness-0 dark:group-hover/icon:invert-0 dark:group-hover/icon:brightness-100 transition-all duration-300"
            loading="eager"
          />
          <span class="text-sm font-semibold hidden lg:block opacity-0 group-hover/icon:opacity-100 transition-all duration-300 -translate-x-2 group-hover/icon:translate-x-0">{tech.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .animate-marquee {
    animation: marquee 40s linear infinite;
  }
  .animate-marquee2 {
    animation: marquee2 40s linear infinite;
  }

  @keyframes marquee {
    0% { transform: translateX(0%); }
    100% { transform: translateX(-100%); }
  }
  @keyframes marquee2 {
    0% { transform: translateX(100%); }
    100% { transform: translateX(0%); }
  }

  /* Pause on hover */
  .group:hover .animate-marquee,
  .group:hover .animate-marquee2 {
    animation-play-state: paused;
  }
</style>
